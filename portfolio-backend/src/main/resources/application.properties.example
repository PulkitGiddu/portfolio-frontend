# Server Configuration
server.port=8081

spring.profiles.active=dev

# JPA Configuration
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# Email Configuration (Gmail example)
# You'll need to enable "App Passwords" in your Google Account
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=pulkitgiddu09@gmail.com
spring.mail.password=${MAIL_PASSWORD}
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
spring.mail.properties.mail.smtp.starttls.required=true

# Email recipient for contact form
app.contact.email=pulkitgiddu09@gmail.com
app.admin.email=pulkitgiddu09@gmail.com

# OAuth2 Configuration (Google)
# Get these from Google Cloud Console
spring.security.oauth2.client.registration.google.client-id=${GOOGLE_CLIENT_ID}
spring.security.oauth2.client.registration.google.client-secret=${GOOGLE_CLIENT_SECRET}
spring.security.oauth2.client.registration.google.scope=openid,profile,email


# CORS Configuration
app.cors.allowed-origins=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000

# Logging
logging.level.com.portfolio=DEBUG
logging.level.org.springframework.web=INFO
logging.level.org.hibernate.SQL=DEBUG
